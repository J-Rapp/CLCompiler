<h1>
  <%= @user.username %>'s Dashboard
</h1>

<p>
  <%= button_to 'Edit Account', edit_registration_path(@user), method: :get %>
</p>
<p>
  <%= button_to 'Logout', logout_path, method: :delete %>
</p>

<hr />

<h2>
  My Active Searches
</h2>

<ul>
<% @user.searches.each do |search| %>
  <li>
    <%= link_to "#{search.name}", search_path(search) %>
    <%= button_to 'Delete Search', search, method: :delete %>
  </li>
<% end %>
</ul>

<p>
  <%= button_to 'Create New Search', new_search_path, method: :get %>
</p>

<hr />

